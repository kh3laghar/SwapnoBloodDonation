<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b6dcd7"
    android:orientation="vertical"
    android:weightSum="1"><![CDATA[
    FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.30">
    ]]>

    <RelativeLayout
        android:id="@+id/Login_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView_username_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="69dp"
            android:layout_marginStart="69dp"
            android:layout_marginTop="131dp"
            android:text="Enter your User Name :" />

        <EditText
            android:id="@+id/editText_username_Text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_username_login"
            android:layout_alignStart="@+id/textView_username_login"
            android:layout_below="@+id/textView_username_login"
            android:text="User Name" />

        <TextView
            android:id="@+id/textView_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView_username_login"
            android:layout_alignRight="@+id/textView_username_login"
            android:layout_below="@+id/editText_username_Text"
            android:layout_marginTop="44dp"
            android:text="Enter Your Password :" />

        <EditText
            android:id="@+id/editText_password_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_password"
            android:layout_alignStart="@+id/textView_password"
            android:layout_below="@+id/textView_password"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Password" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_password_text"
            android:layout_alignStart="@+id/editText_password_text"
            android:layout_below="@+id/editText_password_text"
            android:layout_marginTop="41dp"
            android:background="@color/accent_material_light"
            android:text="LOGIN" />

        <Button
            android:id="@+id/button_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editText_username_Text"
            android:layout_alignRight="@+id/editText_username_Text"
            android:layout_alignTop="@+id/button_login"
            android:background="@color/accent_material_light"
            android:text="Forget Password " />

        <TextView
            android:id="@+id/textView_login_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText_username_Text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="44dp"
            android:text="LOGIN"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/button_register_login_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editText_password_text"
            android:layout_alignLeft="@+id/button_login"
            android:layout_alignRight="@+id/editText_password_text"
            android:layout_alignStart="@+id/button_login"
            android:layout_below="@+id/button_login"
            android:layout_marginTop="38dp"
            android:background="@color/accent_material_light"
            android:text="Register" />

    </RelativeLayout>


</LinearLayout>