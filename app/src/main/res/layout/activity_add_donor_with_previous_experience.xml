<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/datePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:backgroundTint="@color/bootstrap_gray"
        android:text="@string/add_date"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="36sp"
        android:textStyle="normal|bold|italic"
        android:typeface="sans" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_above="@+id/PreviousDate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />

    <Button
        android:id="@+id/PreviousDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/datePicker"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/datePicker"
        android:layout_marginBottom="142dp"
        android:layout_marginLeft="109dp"
        android:layout_marginStart="109dp"
        android:backgroundTint="?attr/actionMenuTextColor"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="12sp"
        android:text="SUBMIT"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        android:typeface="sans" />
</RelativeLayout>